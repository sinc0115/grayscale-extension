{
  "browser_action": {
    "browser_style": true,
    "default_title": "Grayscaler"
  },
  "description": "Displays webpage in grayscale. Useful as part of accessibility testing for webpages. ",
  "author": "Katherine Sinclair",
  "manifest_version": 2,
  "name": "Grayscaler",
  "version": "1.0",
  "homepage_url": "https://github.com/sinc0115/grayscale-extension",
  "icons": {
    "48": "icons/invert_colors-black-24dp.svg"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],

  "permissions": [
    "<all_urls>",
    "notifications",
    "storage",
    "activeTab"
  ]

}